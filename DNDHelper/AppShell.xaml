<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DNDHelper.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DNDHelper"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Character Maker"
            ContentTemplate="{DataTemplate local:CharacterMakerPage}"
            Route="CharacterMakerPage" />
    
        <ShellContent
            Title="Initiative Tracker"
            ContentTemplate="{DataTemplate local:InitiativeTrackerPage}"
            Route="InitiativeTrackerPage" />
        
    </TabBar>
</Shell>
